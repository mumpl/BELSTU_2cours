<Window x:Class="LinguaBender.Views.CoursesEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование курса"
        Height="350" Width="500"
        WindowStartupLocation="CenterScreen"
        xmlns:local="clr-namespace:LinguaBender.Views">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Название курса:"/>
        <TextBox Grid.Row="1"/>

        <TextBlock Grid.Row="2" Text="Категория:"/>
        <ComboBox Grid.Row="3" >
            <ComboBoxItem Content="Базовый"/>
            <ComboBoxItem Content="Средний"/>
            <ComboBoxItem Content="Продвинутый"/>
        </ComboBox>

        <TextBlock Grid.Row="4" Text="Количество уроков:"/>
        <TextBox Grid.Row="5" VerticalAlignment="Top" Height="20"/>


        <TextBlock Grid.Row="6" Text="Описание:"/>
        <TextBox Grid.Row="7"/>

        <TextBlock Grid.Row="8" Text="Цена:"/>
        <TextBox Grid.Row="9" VerticalAlignment="Top" Height="20"/>

        <TextBlock Grid.Row="10" Text="Язык:"/>
        <TextBox Grid.Row="11" VerticalAlignment="Top" Height="20"/>


        <StackPanel Grid.Row="12" Orientation="Horizontal" HorizontalAlignment="Center" Margin="30">
            <Button Content="Сохранить" Command="{x:Static local:CoursesEditWindow.SaveCommand}" Width="100" />
            <Button Content="Отмена" Command="{x:Static local:CoursesEditWindow.ResetCommand}" Width="100"/>
        </StackPanel>


    </Grid>
</Window>
