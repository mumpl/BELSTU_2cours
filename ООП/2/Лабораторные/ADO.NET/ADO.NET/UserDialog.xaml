<Window x:Class="ADO.NET.UserDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить/Редактировать пользователя" Height="250" Width="400">
    <Grid Margin="10,10,10,12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="ID:" Grid.Row="0"/>
        <TextBox Text="{Binding User.Id}" Grid.Row="1" Margin="0,0,0,10"/>

        <TextBlock Text="Имя:" Grid.Row="2"/>
        <TextBox Text="{Binding User.Name}" Grid.Row="3" Margin="0,0,0,10"/>

        <TextBlock Text="Пароль:" Grid.Row="4"/>
        <TextBox Text="{Binding User.Password}" Grid.Row="5" Margin="0,0,0,10"/>

        <TextBlock Text="Роль:" Grid.Row="6"/>
        <ComboBox ItemsSource="{Binding Roles}" DisplayMemberPath="RoleName" SelectedValuePath="RoleId" 
                  SelectedValue="{Binding User.RoleId}" Grid.Row="7" Margin="0,0,0,10"/>

        <StackPanel Grid.Row="8" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Сохранить" Click="Save_Click" Width="80" Margin="0,0,10,0"/>
            <Button Content="Отмена" Click="Cancel_Click" Width="80"/>
        </StackPanel>
    </Grid>
</Window>
