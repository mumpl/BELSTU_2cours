<Window x:Class="ADO.NET.CourseDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить/Редактировать курс" Height="298" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Название:"/>
        <TextBox x:Name="txtName" Grid.Row="1" Margin="0,5"/>

        <TextBlock Text="Категория:" Grid.Row="2"/>
        <TextBox x:Name="txtCategory" Grid.Row="3" Margin="0,5"/>

        <TextBlock Text="Уроки:" Grid.Row="4"/>
        <TextBox x:Name="txtLessons" Grid.Row="5" Margin="0,5"/>

        <TextBlock Text="Описание:" Grid.Row="6"/>
        <TextBox x:Name="txtDescription" Grid.Row="7" Margin="0,5"/>

        <TextBlock Text="Цена:" Grid.Row="8"/>
        <TextBox x:Name="txtPrice" Grid.Row="6" Margin="0,25,0,-15"/>

        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,50,18,-40">
            <Button x:Name="BtnSave" Content="Сохранить" Width="80" Click="BtnSave_Click"/>
            <Button x:Name="BtnCancel" Content="Отмена" Width="80" Click="BtnCancel_Click"/>

        </StackPanel>
    </Grid>
</Window>
