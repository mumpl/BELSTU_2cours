<Window x:Class="ADO.NET.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ADO.NET"
        mc:Ignorable="d"
        Title="Админ-панель" Height="450" Width="800" MinHeight="400" MinWidth="600">
    <DockPanel>
        <TabControl x:Name="TabControl" DockPanel.Dock="Top">
            <TabItem Header="Курсы">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5">
                        <TextBlock Text="Фильтр по категории:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <ComboBox x:Name="CategoryFilter" Width="120" Margin="0,0,10,0" SelectionChanged="CategoryFilter_SelectionChanged">
                            <ComboBoxItem Content="Все"/>
                            <ComboBoxItem Content="Базовый"/>
                            <ComboBoxItem Content="Средний"/>
                            <ComboBoxItem Content="Продвинутый"/>
                        </ComboBox>

                    </StackPanel>

                    <DataGrid x:Name="CoursesGrid" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True" Margin="5">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Название" Binding="{Binding CourseName}" Width="*"/>
                            <DataGridTextColumn Header="Категория" Binding="{Binding Category}" Width="*"/>
                            <DataGridTextColumn Header="Уроки" Binding="{Binding Lessons}" Width="*"/>
                            <DataGridTextColumn Header="Описание" Binding="{Binding Description}" Width="2*"/>
                            <DataGridTextColumn Header="Цена" Binding="{Binding Price}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
            <TabItem Header="Пользователи">
                <DataGrid x:Name="UsersGrid" AutoGenerateColumns="False" IsReadOnly="True" Margin="5">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="*"/>
                        <DataGridTextColumn Header="Имя" Binding="{Binding Name}" Width="*"/>
                        <DataGridTextColumn Header="Роль" Binding="{Binding RoleName}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
        </TabControl>

        <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom" Margin="5" HorizontalAlignment="Center">
            <Button x:Name="BtnAdd" Content="Добавить" Width="100" Margin="5"/>  
            <Button x:Name="BtnEdit" Content="Редактировать" Width="100" Margin="5"/>
            <Button x:Name="BtnDelete" Content="Удалить" Width="100" Margin="5"/>
            
            
        </StackPanel>
    </DockPanel>
</Window>
