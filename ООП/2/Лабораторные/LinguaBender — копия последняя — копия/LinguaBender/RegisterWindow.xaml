<Window x:Class="LinguaBender.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:LinguaBender"
        Title="RegisterWindow" 
         Height="433" Width="300">
    <Grid>
        <StackPanel Margin="20">
            <TextBox x:Name="UsernameBox"  Margin="0 10"/>
            <PasswordBox x:Name="PasswordBox"  Margin="0 10"/>
            <TextBlock Text="Выберите роль:" Margin="0 10 0 0"/>
            <ComboBox x:Name="RoleComboBox" DisplayMemberPath="RoleName" SelectedValuePath="RoleId" Margin="0 10"/>
            <Image x:Name="UserPhotoPreview" Width="100" Height="100" Stretch="UniformToFill" Margin="0 10"/>
            <Button Content="Выбрать фото" Click="ChoosePhoto_Click" Margin="0 10"/>
            <Button Content="Зарегистрироваться" Click="Register_Click"/>
        </StackPanel>
    </Grid>
</Window>
