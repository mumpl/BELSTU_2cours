<Window x:Class="LinguaBender.Views.CoursesAddWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:LinguaBender.Views"
        Title="Добавление курса"
        Height="469" Width="490" 
        WindowStartupLocation="CenterScreen" Background="Transparent" 
        WindowStyle="None" AllowsTransparency="True"
        Icon="icon3.png">

    <Border Background="{DynamicResource MainBorder}" CornerRadius="40" BorderThickness="2" Padding="20">
        <Border CornerRadius="40" Background="{DynamicResource Gradient}">
            
            <Grid Margin="20,20,20,20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="{StaticResource CName}" Style="{StaticResource titleText}" x:Name="CName"/>
                <TextBox x:Name="CourseName" Grid.Row="1" Height="20" />

                <TextBlock Grid.Row="2" Text="{StaticResource CCategory}" Style="{StaticResource titleText}" x:Name="CCategory"/>
                <TextBox x:Name="CourseCategory" Grid.Row="3" VerticalAlignment="Top" Height="20" />

                <TextBlock Grid.Row="4" Text="{StaticResource LQuantity}" Style="{StaticResource titleText}" x:Name="LQuantity"/>
                <TextBox x:Name="LessonsQuantity" Grid.Row="5" VerticalAlignment="Top" Height="20" />


                <TextBlock Grid.Row="6" Text="{StaticResource CDescription}" Style="{StaticResource titleText}" x:Name="CDescription"/>
                <TextBox x:Name="CourseDescription" Height="20" Grid.Row="7" />

                <TextBlock Grid.Row="8" Text="{StaticResource CPrice}" Style="{StaticResource titleText}" x:Name="CPrice"/>
                <TextBox x:Name="CoursePrice" Grid.Row="9" VerticalAlignment="Top" Height="20" />

                <TextBlock Grid.Row="10" Text="{StaticResource CLanguage}" Style="{StaticResource titleText}" x:Name="CLanguage"/>
                <TextBox x:Name="CourseLanguage" Grid.Row="11" VerticalAlignment="Top" Height="20"  />


                <StackPanel Grid.Row="11" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,30,0,0">
                    <Button Content="{StaticResource SaveBtn}" Command="{x:Static local:CoursesAddWindow.SaveCommand}" Width="100" Background="#7163ba" Foreground="White" 
                            Style="{StaticResource tabButton}" MouseEnter="Button_MouseEnter" MouseLeave="Button_MouseLeave"
                            x:Name="SaveBtn"/>
                    <Button Content="{StaticResource ResetBtn}" Command="{x:Static local:CoursesAddWindow.ResetCommand}" Width="100" Background="#7163ba" Foreground="White" 
                            Style="{StaticResource tabButton}" MouseEnter="Button_MouseEnter" MouseLeave="Button_MouseLeave"
                            x:Name="ResetBtn"/>
                </StackPanel>

                <Button Grid.Row="12" x:Name="CloseAddButton" Content="{StaticResource ClosePrButton}" 
                        Margin="0" Width="100" Style="{StaticResource tabButton}" MouseEnter="Button_MouseEnter" MouseLeave="Button_MouseLeave"
                        Command="{x:Static local:CoursesAddWindow.CloseCommand}"/>




            </Grid>
        </Border>

    </Border>

</Window>