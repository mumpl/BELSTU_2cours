<Window x:Class="LinguaBender.Views.CoursesEdit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        xmlns:uc="clr-namespace:LinguaBender.Controls"
        Title="CoursesEdit" Height="760" Width="1280" Background="Transparent" 
        WindowStartupLocation="CenterScreen" WindowStyle="None" AllowsTransparency="True"
        Icon="icon3.png"
        xmlns:local="clr-namespace:LinguaBender.Views">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </Window.Resources>
    <Border Background="{DynamicResource MainBorder}" CornerRadius="40" BorderThickness="2" Padding="20">
        <Border CornerRadius="40" Background="{DynamicResource Gradient}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="130"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Левое меню -->
                <Border CornerRadius="30" Background="#7163ba" Margin="20">
                    <Grid>
                        <StackPanel VerticalAlignment="Top">
                            <Button x:Name="HomeButton" Style="{StaticResource topMenuButton}" Margin="10" Click="HomeButton_Click" MouseEnter="Button_MouseEnter" MouseLeave="Button_MouseLeave">
                                <Icon:PackIconMaterial Kind="HomeVariant" Style="{StaticResource menuButtonIcon}"/>
                            </Button>

                            <Separator Background="#877cc5" Margin="20 0 20 10" Height="0.8"/>

                            <Button x:Name="StudentsView" Style="{StaticResource topMenuButton}"  MouseEnter="Button_MouseEnter" MouseLeave="Button_MouseLeave" Click="StudentsView_Click">
                                <Icon:PackIconMaterial Kind="AccountGroup" Style="{StaticResource menuButtonIcon}"/>
                            </Button>

                            <Separator Background="#877cc5" Margin="20 10 20 10" Height="0.8"/>

                            <Button x:Name="CoursesView" Style="{StaticResource topMenuButton}"  MouseEnter="Button_MouseEnter" MouseLeave="Button_MouseLeave" Click="CoursesView_Click">
                                <Icon:PackIconMaterial Kind="FileDocumentEditOutline" Style="{StaticResource menuButtonIcon}"/>
                            </Button>

                            <Separator Background="#877cc5" Margin="20 10 20 10" Height="0.8"/>

                            <Button x:Name="StudentEdit" Style="{StaticResource topMenuButton}" MouseEnter="Button_MouseEnter" MouseLeave="Button_MouseLeave" Click="StudentEdit_Click">
                                <Icon:PackIconMaterial Kind="AccountFile" Style="{StaticResource menuButtonIcon}"/>
                            </Button>

                            <Separator Background="#877cc5" Margin="20 10 20 10" Height="0.8"/>

                            <Button x:Name="CourseEdit" Background="#5a5080" Style="{StaticResource topMenuButton}" MouseEnter="Button_MouseEnter" MouseLeave="Button_MouseLeave">
                                <Icon:PackIconMaterial Kind="FileDocumentPlus" Style="{StaticResource menuButtonIcon}"/>
                            </Button>
                        </StackPanel>

                        <Separator Background="#877cc5" Margin="20 0 20 90" Height="0.8" VerticalAlignment="Bottom"/>

                        <Button x:Name="CloseButton" Style="{StaticResource menuButton}" VerticalAlignment="Bottom" Margin="0 0 0 25" Click="CloseButton_Click" MouseEnter="Button_MouseEnter" MouseLeave="Button_MouseLeave">
                            <Icon:PackIconMaterial Kind="LocationExit" Style="{StaticResource menuButtonIcon}"/>
                        </Button>
                    </Grid>
                </Border>

                <!-- Основной контент -->
                <Grid Grid.Column="1" Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="70"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Поиск -->
                    <Grid Margin="10">
                        <TextBlock x:Name="SearchText" Margin="40 0 0 0" VerticalAlignment="Center" Foreground="#594f7f" 
                                   IsHitTestVisible="False" Panel.ZIndex="1" 
                                   Text="{StaticResource SearchText}"
                                   Visibility="{Binding ElementName=txtSearch, Path=Text.IsEmpty, Converter={StaticResource BoolToVis}}"/>
                        <TextBox x:Name="txtSearch" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource searchTextBox}"/>
                        <Icon:PackIconMaterial Kind="Magnify" Width="14" Height="14" Foreground="#594f7f" 
                               HorizontalAlignment="Left" VerticalAlignment="Center" Margin="15 0 0 0"/>
                    </Grid>

                    <!-- Аватар пользователя -->
                    <Ellipse Width="45" Height="45" Margin="15 0 7 0" Grid.Column="2" HorizontalAlignment="Right">
                        <Ellipse.Fill>
                            <ImageBrush ImageSource="/images/david.png"/>
                        </Ellipse.Fill>
                    </Ellipse>

                    <Border CornerRadius="20" Background="{DynamicResource TabBorder}" Grid.Row="1">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"  Grid.Row="1">
                            <Button Content="{StaticResource AddBtn}" Command="{x:Static local:CoursesEdit.AddCommand}" FontSize="16" Margin="10" Width="140" Height="50" 
                                    Style="{StaticResource tabButton}" MouseEnter="Button_MouseEnter" MouseLeave="Button_MouseLeave"
                                    x:Name="AddBtn"/>
                            <Button Content="{StaticResource EditBtn}" Command="{x:Static local:CoursesEdit.EditCommand}" FontSize="16" Margin="10" Width="140" Height="50" 
                                    Style="{StaticResource tabButton}" MouseEnter="Button_MouseEnter" MouseLeave="Button_MouseLeave" 
                                    x:Name="EditBtn"/>
                            <Button Content="{StaticResource DeleteBtn}" Command="{x:Static local:CoursesEdit.DeleteCommand}" FontSize="16" Margin="10" Width="140" Height="50" 
                                    Style="{StaticResource tabButton}" MouseEnter="Button_MouseEnter" MouseLeave="Button_MouseLeave"
                                    x:Name="DeleteBtn"/>
                            <Button Content="{StaticResource RefreshBtn}" Command="{x:Static local:CoursesEdit.RefreshCommand}" FontSize="16" Margin="10" Width="140" Height="50" 
                                    Style="{StaticResource tabButton}" MouseEnter="Button_MouseEnter" MouseLeave="Button_MouseLeave"
                                    x:Name="RefreshBtn"/>

                            <Button x:Name="Undo" Content="Undo" Click="Undo_Click" Margin="5"/>
                            <Button x:Name="Redo" Content="Redo" Click="Redo_Click" Margin="5"/>
                        </StackPanel>
                    </Border>


                    <!-- Карточки курсов -->
                    <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Margin="0 10 0 0">
                        <ListBox ItemsSource="{Binding FilteredCourses}"
                                 SelectedItem="{Binding SelectedCourse, Mode=TwoWay}"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled">

                            <ListBox.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center"/>
                                </ItemsPanelTemplate>
                            </ListBox.ItemsPanel>

                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <uc:InfoCard MouseLeftButtonUp="InfoCard_MouseLeftButtonUp"
                                                DataContext="{Binding}"
                                                Title="{Binding Course_Name}"
                                                Desc="{Binding Description}"
                                                Persentage="{Binding Lessons}"
                                                BottomText="{Binding Category}"
                                                Days="{Binding Price}"
                                                Icon="Book"
                                                Width="330" Height="200"
                                                Margin="0 30"/>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </ScrollViewer>
                </Grid>
            </Grid>
        </Border>
    </Border>
</Window>
